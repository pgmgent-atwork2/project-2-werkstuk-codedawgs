<h1>Gebruikersbeheer</h1>
<form action="/admin/gebruikers" method="POST">
  <label>Voornaam: <input type="text" name="first_name" required></label><br>
  <label>Achternaam: <input type="text" name="last_name" required></label><br>
  <button type="submit">Toevoegen</button>
</form>
<h2>Bestaande gebruikers</h2>
<ul>
  <% users.forEach(user => { %>
    <li><%= user.first_name %> <%= user.last_name %> - Token: <%= user.token %> - Pincode: <%= user.pincode %></li>
  <% }) %>
</ul>
